<h1>Editing Book</h1>

<%= form_with model:@book, local: true do |f| %>

<% if @book.errors.any? %>
    
  <div class="alert-warning">
    <div class="alert1">
      <p><%= pluralize(@book.errors.count, "error") %></p>
    </div
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  <div class="field">
      <%= f.label :title %></br>
      <%= f.text_field :title %>
 
  </div>
 
<div class ="field">
    <%= f.label :opnion %></br>
    <%= f.text_area :body%> 
</div>

<div class ="actions">
    <%= f.submit 'Update Book' %>
</div>
 <% end %>

